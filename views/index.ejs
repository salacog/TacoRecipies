<!DOCTYPE html>
<html>

<head>
  <title>Our taco recipies</title>
  <link rel="stylesheet" type="text/css" href="/styles/main.css">
</head>

<body>
  <h1>Choose your taco!</h1>

  <form action="/recipe" method="POST" class="buttons">
    <button type="submit" value="chicken" name="choice">🐥</button>
    <button type="submit" value="beef" name="choice">🐂</button>
    <button type="submit" value="fish" name="choice">🐟</button>
  </form>
  <div id="recipeContainer" class="hidden">

    <% if (locals.recipe){%>
      <h2> <%= recipe.name %> </h2>

      <h3>Ingredients:</h3>
    <ul id="ingredientsList">

      <li>Protein: <%= recipe.ingredients.protein.name + ", " + recipe.ingredients.protein.preparation %></li>
      <li>Salsa: <%= recipe.ingredients.salsa.name %></li>
      <li>Toppings:  <% recipe.ingredients.toppings.forEach(topping=> { %>
        
          <li>
            <%= topping.quantity %> of <%= topping.name %>
          </li>
          <% }) %></li>
        
    </ul>

    <% } else { %>
      <h3>Ingredients:</h3>
      <h2>Pick your favourite taco ingredient 👆</h2>
      
      <h3>Ingredients:</h3>

    <ul id="ingredientsList">
      <li>Protein:</li>
      <li>Salsa:</li>
      <li>Toppings:</li>
    </ul>
    <% } %>

    <!-- If no recipe yet, show: Pick your favourite taco ingredient 👆 -->
    <!-- Else, show the recipe name e.g. <h2>Recipe name</h2>-->

   



  </div>
</body>

</html>